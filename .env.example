# Gmail API設定
# Google Cloud Consoleで取得したOAuth 2.0クライアントIDのJSONファイルパス
GOOGLE_CREDENTIALS_PATH=credentials/credentials.json

# アクセストークン保存パス（自動生成）
GOOGLE_TOKEN_PATH=credentials/token.pickle

# Gmail検索クエリ（カード会社の通知メールフィルタ）
# 例: from:(vpass.jp OR jcb.co.jp OR rakuten-card.co.jp) subject:(ご利用)
GMAIL_SEARCH_QUERY=from:(vpass.jp OR jcb.co.jp OR rakuten-card.co.jp) subject:(ご利用 OR カード OR 決済)

# トークン暗号化キー（Gmail OAuth token の保護に使用）
# 必須: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=

# ログレベル (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ログ出力形式 (true = JSON形式/本番用, false = コンソール形式/開発用)
JSON_LOGS=false

# FastAPI設定（Web UI実装時）
API_HOST=0.0.0.0
API_PORT=8000

# アラート閾値（円）
ALERT_THRESHOLD=100000

# PINコード認証（空 = 無効）
APP_PIN=

# セッション署名キー（本番環境では必ず変更すること）
SESSION_SECRET=dev-secret-change-me

# ntfy.sh プッシュ通知トピック（空 = 無効）
# ERROR/CRITICAL ログ発生時に通知を送信
NTFY_TOPIC=
